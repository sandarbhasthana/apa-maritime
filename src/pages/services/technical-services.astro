---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
---

<Layout
    title="Technical Services, Supplies & Automation | APA Maritime"
    description="Comprehensive technical support including deck machinery, electrical systems, pump systems, navigation equipment, and emergency services."
>
    <!-- Hero Section -->
    <section
        class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
        <div class="absolute inset-0 z-0">
            <Image
                src="/images/China/technical.jpeg"
                alt="Technical Services"
                class="w-full h-full object-cover"
                width={1920}
                height={1080}
                loading="eager"
            />
        </div>
        <div
            class="absolute inset-0 z-10"
            style="background: rgba(13, 51, 72, 0.7);"
        >
        </div>
        <div class="container-custom relative z-20 text-center">
            <div class="max-w-3xl mx-auto animate-slide-up">
                <h1
                    class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-white"
                >
                    Technical Services & Automation
                </h1>
                <p class="text-xl md:text-2xl text-gray-100">
                    Comprehensive technical support for all vessel systems
                </p>
            </div>
        </div>
    </section>

    <!-- Intro Section -->
    <section class="py-16 bg-white">
        <div class="container-custom">
            <div class="max-w-4xl mx-auto text-center">
                <h2
                    class="text-2xl font-bold text-primary mb-6 animate-slide-up"
                >
                    Reliable Technical Support
                </h2>
                <p
                    class="text-gray-600 leading-relaxed animate-slide-up"
                    style="animation-delay: 0.1s"
                >
                    We coordinate a wide range of technical services through
                    trusted local partners, ensuring quality, speed, and
                    cost-efficiency. Whether routine maintenance or emergency
                    repairs, we deliver solutions that keep your vessel
                    operational.
                </p>
            </div>
        </div>
    </section>

    <!-- Services Grid -->
    <section class="py-16 bg-gray-50">
        <div class="container-custom">
            <h3
                class="text-2xl font-bold text-primary mb-10 text-center animate-slide-up"
            >
                Our Technical Capabilities
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Deck Machinery -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.1s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Deck Machinery
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        Winches, cranes, hatch covers, and deck equipment
                        maintenance and repair
                    </p>
                </div>

                <!-- Electrical & Automation -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.15s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Electrical & Automation
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        Electrical systems, control panels, and automation
                        equipment services
                    </p>
                </div>

                <!-- Pump Systems -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.2s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                            ></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Pump Systems
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        Cargo pumps, ballast systems, and hydraulic equipment
                        maintenance
                    </p>
                </div>

                <!-- Navigation Equipment -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.25s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                            ></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Navigation Equipment
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        Radar, ECDIS, GPS, and communication systems
                        installation and repair
                    </p>
                </div>

                <!-- Engine Services -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.3s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                            ></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Engine Services
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        Main engine, auxiliary engines, and propulsion system
                        maintenance
                    </p>
                </div>

                <!-- Emergency Support -->
                <div
                    class="group bg-gray-50 rounded-xl p-6 hover:bg-primary hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 animate-slide-up"
                    style="animation-delay: 0.35s"
                >
                    <div
                        class="w-12 h-12 bg-primary group-hover:bg-white rounded-full flex items-center justify-center mb-4 transition-colors duration-500"
                    >
                        <svg
                            class="icon-svg w-6 h-6 text-white group-hover:text-primary transition-colors duration-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                            ></path>
                        </svg>
                    </div>
                    <h4
                        class="font-bold text-primary group-hover:text-white mb-2 transition-colors duration-500"
                    >
                        Emergency Technical Support
                    </h4>
                    <p
                        class="text-gray-600 group-hover:text-gray-100 text-sm transition-colors duration-500"
                    >
                        24/7 emergency response for critical vessel systems
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section
        class="py-16 text-white text-center"
        style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);"
    >
        <div class="container-custom">
            <p class="text-xl leading-relaxed mb-8 max-w-3xl mx-auto">
                Whether routine maintenance or emergency repairs, we deliver
                solutions that keep your vessel operational.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/services/services#service-portfolio"
                    class="inline-block border-2 border-white text-white font-semibold px-8 py-3 rounded-lg hover:bg-white hover:text-primary transition-colors duration-300"
                    >Back to Services</a
                >
                <a
                    href="/contact"
                    class="inline-block bg-white text-primary font-semibold px-8 py-3 rounded-lg hover:bg-gray-100 transition-colors duration-300"
                    >Contact Us</a
                >
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Fix SVG icon color on hover */
    .group:hover .icon-svg {
        color: var(--color-primary) !important;
    }
</style>

---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | APA Maritime" description="The page you're looking for doesn't exist.">
  <section class="min-h-screen flex items-center justify-center bg-white">
    <div class="container-custom text-center py-20">
      <div class="mb-8 animate-slide-up">
        <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Page Not Found</h2>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          We couldn't find the page you're looking for. It might have been moved or deleted. Let's get you back on track.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.2s">
        <a href="/" class="btn-primary">
          Back to Home
        </a>
        <a href="/contact" class="btn-outline">
          Contact Support
        </a>
      </div>

      <!-- Decorative SVG -->
      <div class="mt-16 opacity-20">
        <svg class="w-64 h-64 mx-auto" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
          <circle cx="100" cy="100" r="80" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"/>
          <path d="M 100 40 L 140 100 L 100 160 L 60 100 Z" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"/>
          <circle cx="100" cy="100" r="20" fill="none" stroke="currentColor" stroke-width="2" class="text-primary"/>
        </svg>
      </div>
    </div>
  </section>
</Layout>


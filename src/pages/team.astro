---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
---

<Layout title="Our Team | APA Maritime" description="Meet the experienced maritime professionals behind APA Maritime.">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <Image
        src="/images/team.jpeg"
        alt="Our Team"
        class="w-full h-full object-cover"
        width={1920}
        height={1080}
        loading="eager"
      />
      <!-- Dark overlay for better text readability -->
      <div class="absolute inset-0 bg-primary opacity-60"></div>
    </div>

    <!-- Content -->
    <div class="container-custom relative z-10 text-center">
      <div class="max-w-3xl mx-auto animate-slide-up">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-white">Our Team</h1>
        <p class="text-xl text-gray-100">
          Meet the experienced maritime professionals dedicated to delivering excellence in shipping and logistics.
        </p>
      </div>
    </div>
  </section>

  <!-- Team Members -->
  <section class="py-10 bg-white">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="section-title">Leadership Team</h2>
        <p class="section-subtitle">
        Our team comprises of 75 years of combined experience from very diverse backgrounds in seafaring , chartering, brokering, operations, chartered accountants, shipping agency and marine services capturing the full shipping value chain.
        </p>
      </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 text-white" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 100%);">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-bold mb-6 text-white">Ready to Work With Us?</h2>
      <p class="text-xl text-gray-100 mb-8 max-w-2xl mx-auto">
        Connect with our team to discuss your maritime needs and discover how we can help your business succeed.
      </p>
      <a href="/contact" class="btn-outline">Get in Touch</a>
    </div>
  </section>
</Layout>

